    "chai": "^4.2.0",
    "ethereum-waffle": "^2.5.0",
    "ethereumjs-util": "^6.2.0",
    "ethers": "^4.0.47",
    "mocha": "^6.2.2",
    "ncp": "^2.0.0",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.51",
    "rimraf": "^3.0.0",
    "solc": "0.6.6",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "scripts": {
