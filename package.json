  "dependencies": {
    "@uniswap/lib": "1.1.1",
    "@uniswap/v2-core": "1.0.0",
    "@uniswap/v2-periphery": "^1.0.0-beta.0",
    "husky": "^4.2.5"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.3",
    "@nomiclabs/buidler-ethers": "^1.3.3",
    "@nomiclabs/buidler-waffle": "^1.3.3",
    "@types/chai": "^4.2.6",
